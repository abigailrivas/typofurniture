        title: "Et deleniti eligendi voluptatem."
        image: "/samples/images/default.svg"
    - type: list_item
      settings:
        title: "Et reiciendis odit quaerat."
        image: "/samples/images/default.svg"
    - type: list_item
      settings:
        title: "At a voluptatem commodi."
        image: "/samples/images/default.svg"

